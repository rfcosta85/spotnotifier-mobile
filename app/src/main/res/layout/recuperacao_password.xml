<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperacaoPasswordActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="214dp"
        android:layout_height="203dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo"
        android:contentDescription="@string/logo"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent"
        app:srcCompat="@drawable/return_icon"
        android:contentDescription="@string/return_icon"/>

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:autofillHints="username"
        android:background="@drawable/border_input"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:hint="@string/insert_recovery_code"
        android:inputType="text"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:autofillHints="username"
        android:background="@drawable/border_input"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:hint="@string/new_password"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="269dp"
        android:layout_height="22dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="18dp"
        android:text="@string/insert_recovery_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:textColor="@color/dark_blue"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="22dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/password_label"
        android:text="@string/new_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        android:textColor="@color/dark_blue"/>

    <Button
        android:id="@+id/main_btn_register"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/dark_orange"
        android:fontFamily="@font/montserrat"
        android:onClick="recoveryPassword"
        android:text="@string/recovery_password_button"
        tools:layout_editor_absoluteX="145dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>